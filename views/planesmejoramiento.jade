extends menu
block title
  title!=title
block resto
  h3 SEGUIMIENTO DE REACREDITACIÓN DE PROGRAMAS.
  .col-md-8.col-md-offset-2(style='text-align: left;')
    .col-md-12
      .col-md-4
        label.control-label Seleccione el programa 
      .col-md-8
        select#lstacre.form-control(onchange='viewplans()')
    .col-md-12
      .col-md-4
        label.control-label  SNIES
      .col-md-8
        input#txtsnies.form-control(type='text' readonly)
    .col-md-12
      .col-md-4
        label.control-label Estado de Acreditación. 
      .col-md-8
        input#plestacre.form-control(type='text' readonly)
    .col-md-12
      .col-md-3
        label.control-label Fecha Inicio de Acreditación. 
      .col-md-3
        input#feciniacre.form-control(type='text' readonly)
      .col-md-3
        label.control-label Fecha fín de Acreditación. 
      .col-md-3
        input#fecfinacre.form-control(type='text' readonly)
    .col-md-12(style='background-color: lightgreen')
      br
      .col-md-8
        label Fechas de Finalización Fase de Reacreditación. 
      .col-md-4
        label Estado
    .col-md-12
      br
      .col-md-8.col-sm-10.col-xs-12
        .col-md-7
          label.control-label Primer Plan de Mejoramiento.
        .col-md-5
          input#fecpm1.form-control(type='text' readonly)
      .col-md-1.col-sm-3.col-xs-6
        #imgestpm1
        //img.plest(src='/images/red.svg' alt='rojo')
      .col-md-3.col-sm-5.col-xs-10
        input#chpm1.form-control(type='checkbox' style!=check onchange='openconfirmation()' value = 'true')
      br
      .col-md-8.col-sm-10.col-xs-12
        .col-md-7
          label.control-label Primera Auto Evaluación
        .col-md-5
          input#fecaev1.form-control(type='text' readonly)
      .col-md-1.col-sm-3.col-xs-6
        #imgestaev1
      .col-md-3.col-sm-5.col-xs-10
        input#cheva1.form-control(type='checkbox' style!=check onchange='openconfirmation()' value = 'true')
      hr.col-md-11
      .col-md-8.col-sm-10.col-xs-12
        .col-md-7
          label.control-label Segundo Plan de Mejoramiento.
        .col-md-5
          input#fecpm2.form-control(type='text' readonly)
      .col-md-1.col-sm-3.col-xs-6
        #imgestpm2
      .col-md-3.col-sm-5.col-xs-10
        input#chpm2.form-control(type='checkbox' style!=check onchange='openconfirmation()' value = 'true') 
      br
      .col-md-8.col-sm-10.col-xs-12
        .col-md-7
          label.control-label Segunda Auto Evaluación
        .col-md-5
          input#fecave2.form-control(type='text' readonly)
      .col-md-1.col-sm-3.col-xs-6
        #imgestaev2
      .col-md-3.col-sm-5.col-xs-10
        input#cheva2.form-control(type='checkbox' style!=check onchange='openconfirmation()' value = 'true')
      hr.col-md-11
      .col-md-8.col-sm-10.col-xs-12
        .col-md-7
          label.control-label Trámite Plataforma MEN
        .col-md-5
          input#fectrmen.form-control(type='text' readonly)
      .col-md-1.col-sm-3.col-xs-6
        #imgestmen
      .col-md-3.col-sm-5.col-xs-10
        input#chtrmen.form-control(type='checkbox' style!=check onchange='openconfirmation()' value = 'true')
  //modal de confirmacion
  #modalconfirm.modal.fade.bd-example-modal-lg
    .modal-dialog
      .modal-content
        .modal-header.headerModal
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
          h3#modal-title.modal-title.title Confirmación de Entrega.
        #modal-body.modal-body
          h2
            span(class='glyphicon glyphicon-bell' aria-hidden="true" style='color:orange;')
          p ¿Está seguro que desea registrar la entrega de este documento?
          input#btnacept.btn.btn-success(type='button' value='Aceptar' onclick='checkeds()')
          input#btncancel.btn.btn-default(type='button' value='Cancelar' onclick='cancelsend()')
  //modal para sacar mensajes     
  #myModal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header.headerModal
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
          h4#modal-title.modal-title Error De Filtros
        #modal-body.modal-body
          p#messageError
        .modal-footer
          button.btn.btn-success(type='button', onclick='hidenmodal()') Aceptar 
block scriptpage
  script(src='/javascripts/planesmejoramiento.js')
